---
import type { PapersSection } from '@/types/sections/papers-section.types';
import DividedList from '@/web/components/divided-list.astro';
import Divider from '@/web/components/divider.astro';
import SectionCard from '@/web/components/section-card.astro';
import Paper from './paper.astro';

export interface Props extends PapersSection {}

const { config, papers } = Astro.props;
---

<SectionCard {...config}>
  <DividedList>
    {
      papers.flatMap((paper: any) => [
        <Paper {...paper} screenshotsConfig={config.screenshots} />,
        <Divider />,
      ])
    }
  </DividedList>
</SectionCard>
