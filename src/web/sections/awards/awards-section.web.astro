---
import type { AwardsSection } from '@/types/sections/awards-section.types';
import DividedList from '@/web/components/divided-list.astro';
import Divider from '@/web/components/divider.astro';
import SectionCard from '@/web/components/section-card.astro';
import Award from './award.astro';

export interface Props extends AwardsSection {}

const { config, awards } = Astro.props;
---

<SectionCard {...config}>
  <DividedList>
    {
      awards.flatMap((award: any) => [
        <Award {...award} screenshotsConfig={config.screenshots} />,
        <Divider />,
      ])
    }
  </DividedList>
</SectionCard>
